{
    "name": "3lpsy/fracto",
    "description": "A Fractal service provider for PHP",
    "keywords": [
        "3lpsy",
        "elpsy",
        "php",
        "fractal",
        "api",
        "transform"
    ],
    "homepage": "https://github.com/3lpsy/fracto",
    "license": "MIT",
    "authors": [
        {
            "name": "Jim",
            "email": "jim@elpsy.io",
            "homepage": "https://github.com/3lpsy",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^5.6|^7.0",
        "illuminate/support": "~5.1.0|~5.2.0|~5.3.0",
        "league/fractal": "^0.15.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "fzaninotto/faker": "^1.6",
        "symfony/var-dumper": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Elpsy\\Fracto\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Elpsy\\Fracto\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
